        <activity android:name="com.finalcalculator.app.Loan_Amt_Calc_Activity" />
        <activity android:name="com.finalcalculator.app.Loan_Tenure_Calculator" />
        <activity android:name="com.finalcalculator.app.Loan_interest_rate_Calculator" />
        <activity android:name="com.finalcalculator.app.Mortatorium_calculator_Activity" />
        <activity android:name="com.finalcalculator.app.Under_Banking_Calculation_Activity" />
        <activity android:name="com.finalcalculator.app.Currency_Calculator_Activity" />
        <activity android:name="com.finalcalculator.app.PPF_Calculator_Activity" />
        <activity android:name="com.finalcalculator.app.SimpleCompoundActivity" />
    </application>

</manifest>