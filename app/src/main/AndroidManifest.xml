        android:theme="@style/Theme.FinalCalculator"
        tools:targetApi="31">
        <activity
            android:name=".HomeActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.finalcalculator.app.BasicCalculator" />
        <activity android:name="com.finalcalculator.app.ScientificCalculatorActivity" />
        <activity android:name="com.finalcalculator.app.CurrencyCalculator" />
